<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:µImage.Viewer"
        xmlns:Display="clr-namespace:µImage.Display;assembly=µImage.Display"
        x:Class="µImage.Viewer.MainWindow"
        mc:Ignorable="d"
        Title="µImage.Viewer" Loaded="MainWindow_Loaded" Height="600" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Display:uImageControl DockPanel.Dock="Left"
                                   Name ="MyµImage" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   Height="512" Width="512" Margin="32,0,0,0"/>
            <StackPanel Width="200" Height="512">
                <Button Content="Original Image" Click="Original_Button_Click" />
                <Button Content="Median 15 x 15" Click="Median_Button_Click" Margin="0,8,0,0" />
                <Button Content="Dilate 5 x 5" Click="Dilate_Button_Click" Margin="0,8,0,0" />
                <Button Content="Threshold" Click="Threshold_Button_Click" Margin="0,8,0,0" />
            </StackPanel>
        </DockPanel> 
    </Grid>
</Window>