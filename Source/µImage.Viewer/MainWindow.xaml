<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:µ.Viewer"
        xmlns:Display="clr-namespace:µ.Display;assembly=µImage.Display"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        x:Class="µ.Viewer.MainWindow"
        mc:Ignorable="d"
        Title="µImage.Viewer" Loaded="MainWindow_Loaded" Height="650" Width="1000">

    <Grid>
        <DockPanel LastChildFill="True">
            <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="menuOpen_Click" />
                <Separator />
                <MenuItem Header="_Quit" Click="menuQuit_Click" />
            </MenuItem>
            </Menu>
            <Button DockPanel.Dock="Top" Content="Open File..." Width="80" HorizontalAlignment="Left" Margin="32,0,0,0" Click="Open_Button_Click" />
            <Slider x:Name = "SliderMin" DockPanel.Dock="Top" ValueChanged="Sliders_ValueChanged" Maximum="255" Value="0" LargeChange="16" SmallChange="16" TickFrequency="16"/>
            <Slider x:Name = "SliderMax" DockPanel.Dock="Top" ValueChanged="Sliders_ValueChanged" Maximum="255" Value="255" LargeChange="16" SmallChange="16" TickFrequency="16"/>
            <DockPanel LastChildFill="True">
                <Display:uImageControl DockPanel.Dock="Left"
                                   Name ="MyµImage" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   Height="512" Width="512" Margin="32,0,0,0"/>
                <StackPanel Width="400" Height="512">
                    <Button Content="Original Image" Click="Original_Button_Click" />
                    <Button Content="Zoom - Fit" Click="ZoomFit_Button_Click" Margin="0,8,0,0" />
                    <Button Content="Zoom - 1:1" Click="Zoom100_Button_Click" Margin="0,8,0,0" />
                    <Button Content="Median 5 x 5" Click="Median_Button_Click" Margin="0,8,0,0" />
                    <Button Content="Dilate 5 x 5" Click="Dilate_Button_Click" Margin="0,8,0,0" />
                    <Button Content="Threshold" Click="Threshold_Button_Click" Margin="0,8,0,0" />
                    <ComboBox Name="PalettesList" SelectionChanged="PaletteComboBox_Selected" Margin="0,8,0,0">
                        <ComboBoxItem IsSelected = "True">Gray</ComboBoxItem>
                        <ComboBoxItem>Binary</ComboBoxItem>
                        <ComboBoxItem>Gradient</ComboBoxItem>
                        <ComboBoxItem>Rainbow</ComboBoxItem>
                        <ComboBoxItem>Temperature</ComboBoxItem>
                    </ComboBox>
                    <lvc:CartesianChart Name="mySeries" Height = "256" Width = "400" Series="{Binding SeriesCollection}" 
                    LegendLocation="Top" DisableAnimations="True" >
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Bins" ></lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Counts"></lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </StackPanel>
            </DockPanel>
        </DockPanel> 
    </Grid>
</Window>